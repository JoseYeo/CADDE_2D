import numpy as np
import matplotlib.pyplot as plt

h= 1
k= 0.1
x= np.arange(0, 1+h, h)
t= np.arange(0, 1+k, k)
boundaryConditions = [0, 0]
initialConditions = np.sin(np.pi*x)

n = len(x)
m = len(t)
T= np.zeros((n,m))
T[0,:] = boundaryConditions[0]
T[-1,:] = boundaryConditions[1]
T[:,0] = initialConditions
T.round(3)
factor = k/h**2

for j in range(m):
  for i in range(1, n-1):
    T[i,j] = factor*T[i-1, j-1] + (i-2*factor)*T[i, j-1] + factor *T[i+1, j-1]
T.round(3)
